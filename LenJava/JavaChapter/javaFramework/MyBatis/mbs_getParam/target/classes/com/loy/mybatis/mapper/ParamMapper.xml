<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.loy.mybatis.mapper.ParamMapper">
<!--获取参数-->
    <insert id="registerUser">
        insert into m_user values (null,#{param1},#{param2})
    </insert>
    <insert id="registerUserParam">
        insert into m_user values (null,#{name},#{passwd})
    </insert>
    <select id="checkLoginUser" resultType="User">
         select * from m_user where name=#{username} and passwd=#{passwd}
    </select>

    <insert id="insertUser">
        insert into m_user values(null,#{name},#{passwd})
    </insert>

    <select id="countUser" resultType="int">
        select count(*) from m_user;
    </select>
</mapper>
