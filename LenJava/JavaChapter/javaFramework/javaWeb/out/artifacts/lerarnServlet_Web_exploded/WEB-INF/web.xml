<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
<!--context-param属于整个工程项目-->
    <context-param>
        <param-name>username</param-name>
        <param-value>哈哈</param-value>
    </context-param>

<!--    servlet标签给tomcat配置servlet程序-->
    <servlet>
<!--        给servlet起别名（类名）-->
        <servlet-name>MyServlet</servlet-name>
<!--        对应类的全类名-->
        <servlet-class>com.loy.servlet.MyServlet</servlet-class>
        <!--    配置init-param参数（属于一个servlet程序）-->
        <init-param>
            <param-name>name</param-name>
            <param-value>欧坤</param-value>
        </init-param>
    </servlet>
<!--    配置servlet程序访问地址-->
    <servlet-mapping>
<!--        告诉服务器当前配置的地址给哪个servlet程序使用-->
        <servlet-name>MyServlet</servlet-name>
<!--        配置访问地址：在http://ip:port/工程路径（配置服务器时的路径）/myServlet-->
        <url-pattern>/myServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MyMainServlet</servlet-name>
        <servlet-class>com.loy.servlet.MyMainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyMainServlet</servlet-name>
        <url-pattern>/myMainServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ContextServlet</servlet-name>
        <servlet-class>com.loy.servlet.ContextServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContextServlet</servlet-name>
        <url-pattern>/contextServlet</url-pattern>
    </servlet-mapping>

<!--==================HttpServletRequest============================-->
    <servlet>
        <servlet-name>HttpServletReq</servlet-name>
        <servlet-class>com.loy.httpservletrequest.HttpServletReq</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HttpServletReq</servlet-name>
        <url-pattern>/httpServletReq</url-pattern>
    </servlet-mapping>

<!--    ===================请求转发-================-->
    <servlet>
        <servlet-name>ForwardRequests01</servlet-name>
        <servlet-class>com.loy.httpservletrequest.ForwardRequests01</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForwardRequests01</servlet-name>
        <url-pattern>/FR01</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ForwardRequests02</servlet-name>
        <servlet-class>com.loy.httpservletrequest.ForwardRequests02</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForwardRequests02</servlet-name>
        <url-pattern>/FR02</url-pattern>
    </servlet-mapping>

<!--    base标签的使用-->
    <servlet>
        <servlet-name>ForwardBase</servlet-name>
        <servlet-class>com.loy.httpservletrequest.ForwardBase</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForwardBase</servlet-name>
        <url-pattern>/FB</url-pattern>
    </servlet-mapping>

<!--    ===========输出流===================-->
    <servlet>
        <servlet-name>ResponseIOServlet</servlet-name>
        <servlet-class>com.loy.httpservletResponse.ResponseIOServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResponseIOServlet</servlet-name>
        <url-pattern>/RIOS</url-pattern>
    </servlet-mapping>

<!--    ===============重定向===================-->
    <servlet>
        <servlet-name>RespRedirect</servlet-name>
        <servlet-class>com.loy.httpservletResponse.RespRedirect</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RespRedirect</servlet-name>
        <url-pattern>/RR1</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RespRedirect02</servlet-name>
        <servlet-class>com.loy.httpservletResponse.RespRedirect02</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RespRedirect02</servlet-name>
        <url-pattern>/RR2</url-pattern>
    </servlet-mapping>
</web-app>